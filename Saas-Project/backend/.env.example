# Environment Variables untuk SaaS UMKM Backend
# Salin file ini ke .env dan sesuaikan nilai-nilainya

# Database PostgreSQL
DATABASE_URL=postgresql://saas_user:saas_password@localhost:5432/saas_umkm_db

# Redis (opsional, jika digunakan)
REDIS_URL=redis://localhost:6379

# Server
APP_HOST=0.0.0.0
APP_PORT=8000
RUST_LOG=info

# JWT Authentication
JWT_SECRET=your_secure_jwt_secret_key_here
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Rate Limiting
ENABLE_RATE_LIMITING=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_SECS=60

# Compression
ENABLE_COMPRESSION=true

# File Upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760  # 10MB

# SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@example.com
SMTP_PASSWORD=your_app_password
SMTP_FROM_EMAIL=your_email@example.com
SMTP_FROM_NAME=SaaS UMKM Platform

# External APIs
OSS_API_URL=https://api.oss.go.id
OSS_API_KEY=your_oss_api_key
MIDTRANS_CLIENT_KEY=your_midtrans_client_key
MIDTRANS_SERVER_KEY=your_midtrans_server_key
MIDTRANS_IS_PRODUCTION=false
